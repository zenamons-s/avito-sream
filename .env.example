# Avito watcher settings
PORT=3000

# Puppeteer
HEADLESS=false
# If you installed Chrome via puppeteer browsers:
# PUPPETEER_EXECUTABLE_PATH=/home/<user>/.cache/puppeteer/chrome/linux-*/chrome-linux64/chrome

NAV_TIMEOUT_MS=60000

# Optional: provide cookies to automate auth in headless mode
# AVITO_COOKIES_PATH=/path/to/cookies.json
# AVITO_COOKIES_JSON=[{"name":"sid","value":"...","domain":".avito.ru","path":"/"}]
# AVITO_COOKIES_B64=eyJuYW1lIjoic2lkIiwidmFsdWUiOiIuLi4ifQ==

# Auto-bind chat URL after successfully opening it
AUTO_BIND_ON_OPEN=false

# Who to listen
TARGET_CONTACT=Рушан
# Optional: if you can copy the opened chat URL once, set it for maximum stability
# TARGET_CHAT_URL=/profile/messenger/channel/XXXX

# Chat scan steps (fallback scan+scroll)
CHAT_SCAN_STEPS=60

# Polling fallback interval (ms)
POLL_INTERVAL_MS=1500
